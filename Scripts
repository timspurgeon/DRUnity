type IActivatable interface {
	Activate(player *RRPlayer, u *UnitBehavior, id byte, seqID byte)
}



package objects

import (
	"RainbowRunner/internal/database"
	"RainbowRunner/internal/serverconfig"
	"RainbowRunner/internal/types/drobjecttypes"
